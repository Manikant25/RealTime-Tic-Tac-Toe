<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        android:background="@drawable/cover_background_for_room_activity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".onlineGame.online_game_room">
    <ProgressBar
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/progressBar"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
    <EditText
            android:id="@+id/roomEditText"
            android:layout_marginBottom="220dp"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:textSize="25sp"
            android:hint="Enter Room ID Here"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/enterRoombtn"
            android:layout_marginBottom="65dp"
            android:layout_gravity="center"
            android:background="@android:color/holo_blue_bright"
            android:textSize="25sp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:text="Enter Room"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_marginLeft="14dp"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="58dp"
            android:layout_gravity="bottom"
            android:text="Don't have a room? Now Invite your friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_gravity="bottom|center"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
       <TextView
               android:textColor="@android:color/holo_blue_bright"
               android:layout_marginLeft="95dp"
               android:layout_gravity="center"
               android:textSize="35sp"
               android:text="Create Room"
               android:textStyle="italic|bold"
               android:id="@+id/createRoomBtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>