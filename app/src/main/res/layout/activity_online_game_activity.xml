<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".onlineGame.online_game_activity"
        android:background="@drawable/cover_background">
    <FrameLayout
            android:id="@+id/onlineGameFrameLayout"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/background_dark">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">
                <Button
                        android:id="@+id/onlineButton1"
                        android:background="@android:color/white"
                        android:onClick="clickFunction"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_marginLeft="0dp"
                        android:tag="0"
                        android:layout_weight="1"/>
                <Button
                        android:onClick="clickFunction"
                        android:background="@android:color/white"
                        android:id="@+id/onlineButton2"
                        android:layout_marginLeft="10dp"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:tag="1"
                        android:layout_weight="1"/>
                <Button
                        android:onClick="clickFunction"
                        android:background="@android:color/white"
                        android:id="@+id/onlineButton3"
                        android:layout_width="125dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="125dp"
                        android:tag="2"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">
                <Button
                        android:onClick="clickFunction"
                        android:background="@android:color/white"
                        android:id="@+id/onlineButton4"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_marginLeft="0dp"
                        android:tag="3"
                        android:layout_weight="1"/>
                <Button
                        android:onClick="clickFunction"
                        android:background="@android:color/white"
                        android:id="@+id/onlineButton5"
                        android:layout_width="125dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="125dp"
                        android:tag="4"
                        android:layout_weight="1"/>
                <Button
                        android:onClick="clickFunction"
                        android:background="@android:color/white"
                        android:id="@+id/onlineButton6"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_marginLeft="10dp"
                        android:tag="5"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <Button
                        android:onClick="clickFunction"
                        android:background="@android:color/white"
                        android:id="@+id/onlineButton7"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_marginLeft="0dp"
                        android:tag="6"
                        android:layout_weight="1"/>
                <Button
                        android:onClick="clickFunction"
                        android:background="@android:color/white"
                        android:id="@+id/onlineButton8"
                        android:layout_width="125dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="125dp"
                        android:tag="7"
                        android:layout_weight="1"/>
                <Button
                        android:onClick="clickFunction"
                        android:background="@android:color/white"
                        android:id="@+id/onlineButton9"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_marginLeft="10dp"
                        android:tag="8"
                        android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <ProgressBar
            android:id="@+id/onlineGameProgressBar"
            android:layout_marginBottom="70dp"
            android:outlineSpotShadowColor="@android:color/holo_red_dark"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="250dp"/>
    <TextView
            android:id="@+id/onlineMessageTextView"
            android:gravity="center"
            android:text="Waiting for the the other player to join . Room ID - "
            android:layout_marginTop="61dp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:textIsSelectable="true"
            android:id="@+id/onlineGameRoomIDTextView"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="beh3irn47crbhrjdw"
            android:textSize="30sp"
            android:layout_marginTop="115dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</FrameLayout>