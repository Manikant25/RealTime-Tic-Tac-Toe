<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:background="@drawable/cover_background"
        android:padding="20dp">
    <TextView
            android:fontFamily="@font/pacifico"
            android:textStyle="bold|italic|normal"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:text="TIC TAC TOE"
            android:textSize="37sp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <ImageView
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:src="@drawable/tic_tac"
            android:layout_width="300dp"
            android:layout_height="200dp"/>
    <Button
            android:id="@+id/playLocalButton"
            android:text="PLAY LOCAL"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/playOnlineButton"
            android:text="PLAY ONLINE"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>